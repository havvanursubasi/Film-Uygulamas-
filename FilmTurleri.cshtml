@model IEnumerable<film.Models.FilmTuruViewModel>

@{
    ViewData["Title"] = "Film Türleri";
}

<h1>Film Türleri</h1>

<div class="row">
    @foreach (var filmTuru in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">@filmTuru.FilmTuru</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        @foreach (var film in filmTuru.Filmler)
                        {
                            <div class="list-group-item">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@film.FilmAdi</h6>
                                        <small class="text-muted">
                                            Yönetmen: @film.Yonetmen | 
                                            IMDB: @film.IMDBPuani | 
                                            @film.CikisYili
                                        </small>
                                    </div>
                                    <div>
                                        @if (film.Izlendimi)
                                        {
                                            <span class="badge bg-success">İzlendi</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">İzlenmedi</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer text-muted">
                    Toplam: @filmTuru.Filmler.Count film
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Film Listesine Dön</a>
</div> 