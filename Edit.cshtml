@model film.Models.Film

@{
    ViewData["Title"] = "Film Düzenle";
}

<h1>Film Düzenle</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="FilmAdi" class="control-label"></label>
                <input asp-for="FilmAdi" class="form-control" />
                <span asp-validation-for="FilmAdi" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Yonetmen" class="control-label"></label>
                <input asp-for="Yonetmen" class="form-control" />
                <span asp-validation-for="Yonetmen" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CikisYili" class="control-label"></label>
                <input asp-for="CikisYili" class="form-control" type="number" />
                <span asp-validation-for="CikisYili" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FilmTuru" class="control-label"></label>
                <input asp-for="FilmTuru" class="form-control" />
                <span asp-validation-for="FilmTuru" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="IMDBPuani" class="control-label"></label>
                <input asp-for="IMDBPuani" class="form-control" type="number" step="0.1" />
                <span asp-validation-for="IMDBPuani" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input asp-for="Izlendimi" class="form-check-input" />
                    <label asp-for="Izlendimi" class="form-check-label"></label>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 